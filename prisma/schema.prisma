generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String       @id @default(cuid())
  nickname         String       @unique
  email            String       @unique
  password         String
  babyRelation     BabyRelation
  termsAgreed      Boolean
  privacyAgreed    Boolean
  marketingAgreed  Boolean      @default(false)
  termsAgreeAt     DateTime?
  privacyAgreeAt   DateTime?
  marketingAgreeAt DateTime?
  createAt         DateTime     @default(now())
  updateAt         DateTime     @default(now())
}

model EmailVerification {
  id String @id @default(cuid())
  email String
  code String
  type EmailVerificationType
  expiresAt DateTime
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  
  @@index([email, type])
  @@index([email, code, type])
}

enum EmailVerificationType {
  SIGN_UP
  PASSWORD_RESET
}

enum BabyRelation {
  MOTHER
  FATHER
  GRANDMOTHER_PATERNAL
  GRANDFATHER_PATERNAL
  GRANDMOTHER_MATERNAL
  GRANDFATHER_MATERNAL
  AUNT_MATERNAL
  AUNT_PATERNAL
  UNCLE
  GUARDIAN
  OTHER
}
